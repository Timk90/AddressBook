<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//main.java.ru.clients.book.mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "main.java.ru.addressbook.mapper.User">

    <insert id = "insert" parameterType = "main.java.ru.addressbook.mapper.User">
        INSERT INTO users (NAME, PASSWORD, EMAIL, ADDRESS, PHONE, ENABLED)
        VALUES (#{name}, #{password}, #{email}, #{address}, #{phone}, #{enabled});
    </insert>

    <update id = "update" parameterType = "main.java.ru.addressbook.mapper.User">
        UPDATE users
        SET NAME = #{name},
        PASSWORD = #{password},
        EMAIL = #{email},
        ADDRESS = #{address},
        PHONE = #{phone},
        ENABLED = #{enabled}
        WHERE ID = #{id};
    </update>

    <delete id = "deleteByID" parameterType = "long" >
        DELETE FROM users WHERE ID = #{id};
    </delete>

    <select id = "getByName" parameterType = "String" resultMap="result">
        SELECT * FROM users WHERE NAME = #{name};
    </select>

    <resultMap id = "result" type = "main.java.ru.addressbook.mapper.User">
        <result property = "id" column = "ID"/>
        <result property = "name" column = "NAME"/>
        <result property = "password" column = "PASSWORD"/>
        <result property = "email" column = "EMAIL"/>
        <result property = "address" column = "ADDRESS"/>
        <result property = "phone" column = "PHONE"/>
        <result property = "enabled" column = "ENABLED"/>
    </resultMap>

    <select id = "getAll" resultMap = "result">
        SELECT * FROM users ORDER BY name;
    </select>

    <select id = "getById" parameterType = "long" resultMap = "result">
        SELECT * FROM users WHERE ID = #{id};
    </select>



</mapper>